@using Microsoft.EntityFrameworkCore.Infrastructure
@model ApplicationCore.Models.PurchasedMovieCardModel

<div class="col-xl-2 col-lg-3 col-md-4 col-6 mb-4">
    <a asp-controller="Movies" asp-action="MovieDetails" asp-route-id="@Model.Id">
        <img src="@Model.PosterURL" alt="@Model.Title" class="img-fluid rounded" />
    </a>
    
    <button type="button"
            class="btn btn-secondary w-100"
            data-bs-toggle="modal"
            data-bs-target="#movieModal-@Model.Id"
            style="border-radius: 0;">
        Purchase Details 
    </button>
</div>

<div class="modal fade" id="movieModal-@Model.Id" tabindex="-1" aria-labelledby="movieModalLabel-@Model.Id" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="movieModalLabel-@Model.Id">Purchase Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-4">
                        <img src="@Model.PosterURL" alt="@Model.Title" class="img-fluid" />
                    </div>
                    <div class="col-8">
                        <ul class="list-unstyled mt-3">
                            <li class="d-flex align-items-center border-bottom border-secondary py-2">
                                <i class="bi bi-calendar me-2"></i>
                                <span class="me-2">Purchased Date</span>
                                <span class="badge bg-dark text-white">@Model.PurchaseDate.ToString("MMMM/dd/yyyy")</span>
                            </li>
                            <li class="d-flex align-items-center border-bottom border-secondary py-2">
                                <i class="bi bi-cash me-2"></i>
                                <span class="me-2">Price</span>
                                <span class="badge bg-dark text-white">$@Model.Price</span>
                            </li>
                            <li class="d-flex align-items-center border-bottom border-secondary py-2">
                                <i class="bi bi-check-circle me-2"></i>
                                <span class="me-2">Purchase Number</span>
                                <span class="badge bg-dark text-white">@Model.PurchasedNumber</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
