@using ApplicationCore.Models
@model ApplicationCore.Models.CastDetailsModel

<style>
    .content-layer {
        position: relative;
        z-index: 2;
    }
    .btn-fixed {
        min-width: 130px;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-5">
    <div class="row py-4">
        <div class="col-md-4 content-layer">
            <img src="@Model.ProfilePath" alt="Poster" class="img-fluid rounded" />
        </div>
        <div class="col-md-8 content-layer bg-light p-3 rounded">
            <h6 class="fw-bold border-bottom pb-2">CAST INFO</h6>
            <ul class="list-unstyled mt-3">
                <li class="d-flex align-items-center border-bottom border-secondary py-2">
                    <span class="me-2">Name</span>
                    <span class="badge bg-dark text-white">
                        @Model.Name
                    </span>
                </li>
                <li class="d-flex align-items-center border-bottom border-secondary py-2">
                    <span class="me-2">Gender</span>
                    <span class="badge bg-dark text-white">
                        @(Model.Gender == "1" ? "Female" : Model.Gender == "2" ? "Male" : "Unknown")
                    </span>
                </li>
                <li class="d-flex align-items-center border-bottom border-secondary py-2">
                    <span class="me-2">Tmdb Link</span>
                    <a href="@Model.TmdbUrl" target="_blank" class="text-decoration-none text-black">
                        <span class="badge bg-dark text-white">Tmdb Link</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="row py-4">
        <h6 class="fw-bold border-bottom pb-2">CAST FILMS</h6>
        <div class="container-fluid">
            <div class="row bg-light">
                @foreach (var movie in Model.Movies)
                {
                <partial name="_MovieCard" model="movie"/>
                }
            </div>
        </div>
    </div>
</div>
